<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryColor" /> <!-- Цвет фона при нажатии -->
            <corners android:radius="12dp"/>               <!-- Закругленные углы -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/primaryDarkColor"/> <!-- Граница -->
            <corners android:radius="12dp"/>               <!-- Закругленные углы -->
        </shape>
    </item>
</selector>
